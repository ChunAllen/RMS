<div class="modal hide" id="Company">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal">Ã—</button>
    <h3>Create a Company</h3>
    
  </div>
  <div class="modal-body">

    <%= simple_form_for @company do |f| %>
      <fieldset>
        <%= f.input :name %>
        <%= f.input :address, :as => :text, :input_html => { :rows => 3, :cols => 25, :class => 'resizable' }, :label => "Main Address"  %>
        <%= f.input :address2, :as => :text, :input_html => { :rows => 3, :cols => 25, :class => 'resizable' }, :label => "Second Address" %>
        <%= f.input :city %>
        <%= f.label :country%>
        <%= f.country_select :country%>
        <%= f.input :zip_code %>
        <%= f.input :landline %>
        <%= f.input :mobile %>
        <%= f.input :fax %>
        <%= f.hidden_field :user_id, :value => current_user.id %>
      
      </fieldset>
      <%= f.button :submit, :class => "btn btn-primary" %>
      <%= link_to 'Back', companies_path, :class => "btn" %>
    <% end %>

 </div>
</div>