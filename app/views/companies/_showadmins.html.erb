
<table id="companyAdmin" class="display">
  <thead>
    <tr>
      
      <th>Full Name</th>
      <th>Email</th>
      <th>Action</th>
      <th>Size</th>
      <th>Quantity</th>
      <th>Reorder Level</th>
      <th>Actions</th>
  

    </tr>
  </thead>
  <tbody>
   
 <% @showinventory.each do |showinventory| %>

      <tr align="center">
        <td><%= showinventory.name %></td>
        <td><%= showinventory.description %></td>
        <td><%= showinventory.cat_name %></td>
        <td><%= showinventory.size %></td>
        <td><%= showinventory.quantity %></td> 
        <td><%= showinventory.reorder %></td>   
        <td>
          <%= link_to "Edit" ,edit_inventory_path(showinventory.id) , :class => 'btn btn-small btn-info' %> 
          <%= link_to "Delete" , showinventory , :class => 'btn btn-small btn-danger', 
          :confirm => 'Are you sure you want to delete this?', :method => :delete %>
       </td>
      </tr>

    <% end %> 

  </tbody>
</table>

