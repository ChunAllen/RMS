
<!-- SIGN IN -->
<section class="slide" id="fliptrip-login" data-section="3" class="span12 login-window">

  <div class="container" id="login-container">
     
      <div class="span9 offset1">
	    <h2>Sign In</h2>
    	  <div class="pull-right">
     
      	  </div> <!-- pull-right -->
   	  </div> <!-- span9 offset1 -->

      <div class="span4">
            <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
              <div><%= f.text_field :login, :placeholder => "Email or Username" %></div>
              <div><%= f.password_field :password , :placeholder => "Password" %></div>
              <div class="homeform-align">
                <%= f.submit "Sign in", :class => 'span2 btn btn-primary'%>
                 <% if devise_mapping.rememberable? -%>
                          <font class="bulletleft">â€¢</font>
                          <%= f.check_box :remember_me, :as => :boolean, :class => "left1" %><%= f.label :remember_me, :class => "left1" %>
                        <% end -%>
                       
                        <a href="javascript:{}" data-section="4" class="links tableft" id="forgot-button">Forgot your password?</a>   
                        <br/>
                         <a href="javascript:{}" data-section="5" class="links tableft" id="confirm-button">Send me email confirmation</a>   

           		<% end %>
   			  </div> <!-- homeform-align -->
  		</div> <!-- span4 -->
    
   </div> <!-- container -->
</section>
<!-- END SIGN IN -->




        

<!-- SIGN UP -->        
<section class="slide" id="fliptrip-join" data-section="2" class="span12 login-window">
    <div class="container">   
        <div class="span9 offset1">
          		<h2>Sign Up</h2>
           	<div class="pull-right">
          		<a href="javascript:{}" data-section="1" class="close-icon" id="hide-join-button">X</a>
        	</div> <!-- pull right -->
        </div> <!-- span9 offset1 -->
        
       
        <div class="span4">      
               
            <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |x| %>
        			 <div><%= x.text_field :first_name, :placeholder => "First Name"  %></div>
        			 <div><%= x.text_field :last_name, :placeholder => "Last Name" %></div>
        			 <div><%= x.email_field :email, :placeholder => "Email" %></div>
        			 <div><%= x.password_field :password, :placeholder => "Password"  %></div>
        		
        		 <div class="homeform-align">
        		 	<%= x.submit "Sign Up", :class => 'span2 btn btn-primary'%>
        		</div>
        	<%end%>
        </div> <!-- span4 -->
    </div> <!-- container -->
</section>
<!-- END SIGN UP -->

<!-- FORGOT PASSWORD -->
<section class="slide" id="fliptrip-forgot" data-section="4" class="span12 login-window">
      
      <div class="container">

        <div class="span9 offset1">
            <h2>Forgot Password</h2>
          <div class="pull-right">
            <a href="javascript:{}" data-section="1" class="close-icon" id="hide-forgot-button">X</a>
          </div> <!-- pull-right -->
        </div> <!-- span9 offset1 -->

       
        <div class="span4">
            <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
              <div><%= f.email_field :email, :placeholder => "Email" %></div>

              <div><%= f.submit "Send me reset password instructions" , :class => 'span4 btn btn-primary' %></div>
            <% end %>
        </div> <!-- span4 -->

</section>
<!-- END FORGOT PASSWORD -->



<!-- CONFIRMATION EMAIL -->
<section class="slide" id="fliptrip-confirm" data-section="5" class="span12 login-window">
      <div class="container">

        <div class="span9 offset1">
            <h2>Confirm Email</h2>
          <div class="pull-right">
            <a href="javascript:{}" data-section="1" class="close-icon" id="hide-confirm-button">X</a>
          </div> <!-- pull-right -->
        </div> <!-- span9 offset1 -->

      

        <div class="span4">          
          <%= form_for(resource, :as => resource_name, :url => confirmation_path(resource_name), :html => { :method => :post }) do |f| %>
              <div><%= f.email_field :email, :placeholder => "Email" %></div>
              <div><%= f.submit "Send email confirmation" , :class => 'span4 btn btn-primary' %></div>
            <% end %>
        </div> <!-- span4 -->

</section>
<!-- END CONFIRMATION EMAIL -->







