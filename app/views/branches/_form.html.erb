<%= simple_form_for @branch do |f| %>
  <fieldset>
    <%= f.input :name, :required=>true %>
    <%= f.input :restaurant_id, :collection => Restaurant.all.map { |u| [u.name, u.id] }, :include_blank => false %>
    <%= f.input :address, :as => :text, :input_html => { :rows => 3, :cols => 25, :class => 'resizable' }, :label => "Branch Address"  %>
    <%= f.input :contact_number %>
  </fieldset>
  <%= f.button :submit, :class => "btn btn-inverse" %>
  <%= link_to 'Back', branches_path, :class => "btn btn-inverse" %>
<% end %>