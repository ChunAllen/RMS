 <div class="brand-level">

 	 <% @brandid = "" %>
     <% @brands.each do |b| %>
     
     	<table>
     		<tr><td width="750">
	     			<h2><%= b.name %>&nbsp;<%= b.id %></h2>
	     		</td>
	     		<td>
	     			<%= link_to "Edit", edit_brand_path(b.id) %>&nbsp;
	     		</td>
	     		<td>
	     			|&nbsp;
	     		</td>
	     		<td>
	     			<%= link_to "Delete", b, :confirm => "Are you sure?", :method => :delete %>
	     		</td>
     		</tr>
     	</table>
	     
	    <p><%= b.description %></p>
	    <div class="droppable-area">
	      	<ul class="set-permission-group">
	      		<button class="btn btn-primary" data-toggle="modal" href=<%= "#branch" + b.id.to_s %> >Create Branch</button>	

	      		<table id="table" class="display">
			  	<thead>
			    	<tr>
				      	<th>Branch Name</th>
				      	<th>Address</th>
				      	<th>Location</th>
				     	<th>Number</th>
				     	<th>Action</th>
			   		</tr>
			  	</thead>
			  	<tbody>
			  		<tr>
			  			<td>a</td>
			  			<td>b</td>
			  			<td>c</td>
			  			<td>d</td>
			  			<td>e</td>
			  		</tr>
			  	</tbody>
				</table>
				
	      	</ul>
      	<div class="clear-floats"></div></div>
     
      	<% @brandid = b.id %>
      	<% @modalId = "branch" + b.id.to_s %>
		<%= render :template => "branches/_form" %>

     <%end%>
</div>
