 <div class="brand-level">

 	 <% @brandid = "" %>
     <% @brands.each do |b| %>
     
     	<table>
     		<tr>
     			<td>
	     			<%= image_tag b.photo.url %>
	     		</td>
     			<td width="750">
	     			<h2><%= b.name %>&nbsp;<%= b.id %></h2>
	     		</td>
	     		<td>
	     			<%= link_to "Edit", edit_brand_path(b.id) %>&nbsp;
	     		</td>
	     		<td>
	     			|&nbsp;
	     		</td>
	     		<td>
	     			<%= link_to "Delete", b, :confirm => "Are you sure?", :method => :delete %>
	     		</td>
     		</tr>
     	</table>
	     
	    <p><%= b.description %></p>
	    <div class="droppable-area">
	      	<ul class="set-permission-group">
	      		<table border="1">
	      			<tr>
	      				<% @showBranches.each do |sb|%>
			      		 	<% if sb.brand_id == b.id %>
			      		 		<td>
									<%= sb.name %>
								</td>
							<%end%>
	      				<%end%>
	      			</tr>
	      		</table>
				
				<%= link_to "", :data => {:toggle => "modal", :target => "#branch" + b.id.to_s } do %>
						<%= image_tag("/assets/icons/add.png")%>
				<%end%>
	      	</ul>
      	<div class="clear-floats"></div></div>
     
      	<% @brandid = b.id %>
      	<% @modalId = "branch" + b.id.to_s %>
		<%= render :template => "branches/_form" %>
		

     <%end%>
</div>
