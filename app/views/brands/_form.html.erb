<div class="modal hide fade" id="brand">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal">Ã—</button>
    <h3>Create a brand</h3>
    
  </div>
  <div class="modal-body">

       <%= simple_form_for @brand do |f| %>
      <fieldset>
        <%= f.input :name, :required=>true %>
        <%= f.input :description, :as => :text, :input_html => { :rows => 3, :cols => 25, :class => 'resizable' }, :label => "Description" %>
       
      </fieldset>
          <%= f.button :submit, :class => "btn btn-primary" %>
          <button type="button" class="btn btn" data-dismiss="modal">Cancel</button>
        <% end %>

 </div>
</div>