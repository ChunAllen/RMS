<div class="modal hide fade" id="brand">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal">Ã—</button>
    <h3>Create a brand</h3>
    
  </div>
  <div class="modal-body">
   <%= simple_form_for @brand do |f|%>
      <fieldset>
        <%= f.input :name, :label => 'Brand Name' %>
        <%= f.input :description, :as => :text, :input_html => { :rows => 3, :cols => 25, :class => 'resizable' }, :label => "Description"  %>
        <%= f.hidden_field :client_id, :value=>  @showidClient.id %>
      </fieldset>
      <br/>
         <div class="modal-footer">
            <%= f.button :submit, :class => "btn btn-primary" %>
            <button type="button" class="btn" data-dismiss="modal">Back</button>
        </div>
   <%end%> 
    

 </div>
</div>