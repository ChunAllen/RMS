
<div class="fill-all container-fluid">
  <div class="row-fluid">
         <%= render 'layouts/sidebar'%>

      <div class="span" id="content">
        
          <div class="span11">


           <%= render 'layouts/setuptabs'%>
            
            <div class="hero-unit">
              <% if @clients.count > 0 %>
                <%= render 'form' %>
                <button class="btn btn-primary" data-toggle="modal" href="#brand">Create a Brand</button>  
              <br/>
                <%= render 'showbrands' %>
              <%else%>
                 <h1>Cannot create a brand</h1>
                  <p>You need to create a client.</p>
                  <p>
                    <%= link_to "Create a client", clients_path, :class => "btn btn-info"%>
                  </p>
              <%end%>
            </div>  

        </div> <!-- END SPAN11 -->
      </div> <!-- END SPAN CONTENT -->
    </div>
</div>
