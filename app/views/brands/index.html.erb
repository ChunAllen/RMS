<div class="container-fluid">
  <div class="row-fluid">
  	<%= render 'layouts/sidebar'%>

    <div class="span8">
	  <% flash.each do |name, msg| %>
        <div class="alert alert-<%= name == :notice ? "success"  : "error" %>">
          <a class="close" data-dismiss="alert">x</a>
          <%= msg %>
        </div>
      <% end %>
	  <div class="well row-fluid">	 	
 		<legend>
 			<h1>Restaurants</h1>
 		</legend>
        <%= link_to 'Add New Restaurants', new_restaurant_path, :class => "btn btn-inverse" %>
        <br/>
        <br/>
 		<table id="restaurant_table" cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered" >
 		  <thead>
        <tr>
   		    <th>Name</th>
   		    <th>Company</th>
   		    <th>Contact Number</th>
   		    <th>Actions</th>
   		  </tr>
      </thead>
 		  <tbody>
        <% @restaurants.each do |restaurant| %>
          <tr>
            <td><%= restaurant.name %></td> 
            <td><%= restaurant.company_id %></td> 
            <td><%= restaurant.landline %></td>
            <td>
              
              <%= link_to '', restaurant, :class => "icon-eye-open", :rel => "tooltip", :title => "Show" %>
              
              <%= render :partial => 'editInventory', :locals => { :restaurant_id => restaurant }  %>

              <%= link_to 'Edit', edit_restaurant_path(restaurant), :data => {:toggle => "modal", 
                :target => "#EditRestaurant"}, :remote => true %> 


            

               <a href="#EditRestaurant" onclick="javascript:openMyModal('<%= restaurant.id %>')">Restaurant</a> 



            </td>
          </tr>
        <% end %>
      </tbody>
 		</table>
	  </div>
	</div>
  </div>
</div>
